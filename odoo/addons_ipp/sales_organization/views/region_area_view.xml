<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="region_area_view_form" model="ir.ui.view">
            <field name="name">Region/ Area</field>
            <field name="model">region.area</field>
            <field name="arch" type="xml">
                <form string="Region/ Area">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="manager_id"/>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="region_area_view_tree" model="ir.ui.view">
            <field name="name">Region/ Area</field>
            <field name="model">region.area</field>
            <field name="arch" type="xml">
                <tree string="Region/ Area">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                </tree>
            </field>
        </record>

        <record id="region_area_view_search" model="ir.ui.view">
            <field name="name">account.tag.view.search</field>
            <field name="model">region.area</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
